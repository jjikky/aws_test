extends layouts/main

block content
    .form-container
        form(action=`/order${routes.uploadOrder}`, method="post", enctype="multipart/form-data")
            div.fileUpload
                label(for="file") Video File
                input(type="file", id="file", name="imageFile", accept="image/*")
            input(type="text", placeholder="Title", name="title",required=true)
            textarea(name="description", placeholder="Description",required=true)
            input(type="submit", value="Upload Order")